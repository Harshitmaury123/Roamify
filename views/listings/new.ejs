<% layout("/layouts/boilerplate") -%>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
    <h2>Create A New Listing !!</h2>
    <form action="" method="post" novalidate enctype="multipart/form-data" class="needs-validation">
        <div class="mb-3">
            <label for="title" class="from-label">Title</label>
            <input type="text" name="listing[title]" id="" placeholder="Enter Title" class="form-control" required>
            <div class="valid-feedback">Title Looks Good!</div>
            <div class="invalid-feedback">Title cannot be empty</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="from-label">Description</label>
            <textarea name="listing[description]" id="" placeholder="Enter description" class="form-control" required></textarea >
            <div class="invalid-feedback">Enter a short description</div>
        </div>
        

        <div class="mb-3">
            <label for="image" class="from-label">Upload listing image</label>
            <input type="file" name="listing[image]" id="" required class="form-control" >
        </div>

        <div>
            <label for="category">Select Category : </label>
            <select name="category" class="form-select" id="category" aria-label="Default select example" required>
                <option value="mountains" selected>mountains</option>
                <option value="castle">castle</option>
                <option value="camping">camping</option>
                <option value="pools">pools</option>
              </select>
              <br>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="from-label">Price</label>
                <input type="number" name="listing[price]" id="" placeholder="1200" class="form-control" required>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="from-label">Country</label>
                <input type="text" name="listing[country]" id="" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">Country name cannot be empty</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="from-label">Location</label>
            <input type="text" name="listing[location]" id="" placeholder="Enter location" class="form-control" required>
            <div class="invalid-feedback">Location cannot be empty</div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
        <br>
        <br>
    </form>
</div>
</div>
</body>
